generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  role         String    @default("user")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  evidence     Evidence[]
}

model Skill {
  id        Int        @id @default(autoincrement())
  name      String
  category  String?
  level     Int?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  evidence  Evidence[]
}

model Project {
  id        Int        @id @default(autoincrement())
  name      String
  desc      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  evidence  Evidence[]
}

model Evidence {
  id        Int        @id @default(autoincrement())

  // Foreign keys
  userId    Int
  skillId   Int
  projectId Int

  desc      String?
  link      String?
  createdAt DateTime    @default(now())

  // Relations
  user      User       @relation(fields: [userId], references: [id])
  skill     Skill      @relation(fields: [skillId], references: [id])
  project   Project    @relation(fields: [projectId], references: [id])
}
